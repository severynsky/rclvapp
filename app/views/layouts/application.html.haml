!!! 5
%html{"ng-app" => "rclvapp"}
  %head
    %title Rorary Club Lviv-International
    %script{:type => "text/javascript",
        :src => "https://maps.googleapis.com/maps/api/js"}
    %script{:type => "text/javascript",
        :src => "https://connect.facebook.net/en_US/all.js"}
    %link{:rel => :stylesheet, :type => :"text/css", :href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"}

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    %meta{"name" => "viewport", "content" => "width=device-width", "initial-scale" => "1.0", "user-scalable" => "0"}
    %meta{"name" => "description", "content" => "Rotary International Lviv | Ротарі Клуб Львів Інтернешенл"}
    %meta{"name" => "keywords", "content" => "Rotary International, Lviv, Rotary Club, Ротарі Клуб, Львів"}
    <meta name="keywords" content="HTML,CSS,XML,JavaScript">
    / %base{"href" => "/" }
    = csrf_meta_tags
  %body
    %div.square
      %img{:src => "images/rotary-logo.png", :alt => ""}
    #fb-root
    .col-xs-12
      - flash.each do |name, msg|
        %br
        = content_tag :div, msg, class: 'alert alert-info'
      = yield
    .clear
