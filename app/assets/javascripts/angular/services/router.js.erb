'use strict'

rclvapp.config(['$routeProvider', '$locationProvider', '$httpProvider',
  function($routeProvider, $locationProvider, $httpProvider){
    // $locationProvider.html5Mode(true).hashPrefix('!');
    $routeProvider.
    when("/", {
      templateUrl: "<%=asset_path 'templates/home.html' %>",
      controller: "homeContr"
    }).
    when('/news_items', {
      templateUrl: "<%=asset_path 'templates/news_items.html' %>",
      controller: 'newsListContr'
    }).
    when('/news_items/:newsId', {
        templateUrl: "<%=asset_path 'templates/newspage.html' %>",
        controller: 'newsPageContr'
    }).
    when('/news/:newsCat', {
        templateUrl: "<%=asset_path 'templates/news_items_cat.html' %>",
        controller: 'newsListContr'
    }).
    when('/projects', {
        templateUrl: "<%=asset_path 'templates/projects.html' %>",
        controller: 'projectsListContr'
    }).
    when('/projects/:projectId', {
        templateUrl: "<%=asset_path 'templates/projectpage.html' %>",
        controller: 'projectPageContr'
    }).
    when('/events', {
        templateUrl: "<%=asset_path 'templates/events.html' %>",
        controller: 'eventsContr'
    }).
    when('/events/:eventId', {
        templateUrl: "<%=asset_path 'templates/eventpage.html' %>",
        controller: 'eventPageContr'
    }).
    when('/users', {
        templateUrl: "<%=asset_path 'templates/users.html' %>",
        controller: 'usersListContr'
    }).
    when('/users/:userId', {
        templateUrl: "<%=asset_path 'templates/userpage.html' %>",
        controller: 'userPageContr'
    }).
    when('/contact', {
        templateUrl: "<%=asset_path 'templates/contact.html' %>",
        controller: 'contactContr'
    }).
    when('/about', {
        templateUrl: "<%=asset_path 'templates/about.html' %>",
        controller: 'aboutContr'
    }).
    when('/give', {
        templateUrl: "<%=asset_path 'templates/give.html' %>",
        controller: 'aboutContr'
    }).
    otherwise({
        redirectTo: '#/'
    });

    $httpProvider.defaults.headers.common['Access-Control-Allow-Origin'] = '*';
  }

])