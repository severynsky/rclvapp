%section.popup
  .resource-container.col-xs-10.col-xs-offset-1
    .user-page
      .user-page-header
        .user-image-container
          %img(src="{{print.image}}")
        .user-text-container
          .user-page-logo
            %img{src: "/images/rotary-logo.png"}  
          %h2.name
            {{print.name}}
            .flag-container
              %div{"class" => "flag {{print.nationality}}"} 
          %h4
            {{print.role}}
          %h4
            {{print.email}}
          %h4
            {{print.phone}}
      .clear
      .user-page-body
        %table
          %tr
            %td.table-label
              member address:
            %td
              {{print.address}}
          %tr
            %td.table-label
              date of birth:
            %td
              {{print.date_of_birth}}  
          %tr
            %td.table-label
              member nationality:
            %td
              {{print.nationality}}  
          %tr
            %td.table-label
              language spoken:
            %td
              {{print.languages}}
          %tr 
            %td.table-label
              full information:
            %td{"ng-bind-html" => "print.full_data"}

%a.fadeout{"ng-href" => "#/users"}
  .close-btn